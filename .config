CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_filogic=y
CONFIG_TARGET_mediatek_filogic_DEVICE_zbtlink_zbt-z8103ax=y

# Base system
CONFIG_PACKAGE_luci=y
CONFIG_LUCI_LANG_id=y
CONFIG_PACKAGE_luci-theme-bootstrap=y

# SSH server
CONFIG_PACKAGE_dropbear=y

# Basic network tools
CONFIG_PACKAGE_ip-full=y
CONFIG_PACKAGE_ipset=y
CONFIG_PACKAGE_iptables=y
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_odhcpd-ipv6only=y
CONFIG_PACKAGE_ppp=y
CONFIG_PACKAGE_pppoe=y

# Kernel modules - network & wifi
CONFIG_PACKAGE_kmod-mt7981-firmware=y
CONFIG_PACKAGE_kmod-mt7915-firmware=y
CONFIG_PACKAGE_kmod-mt7915e=y
CONFIG_PACKAGE_kmod-mt7981-spi-nand=y
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_kmod-usb3=y

# LuCI protocols
CONFIG_PACKAGE_luci-proto-ipv6=y
CONFIG_PACKAGE_luci-proto-ppp=y
CONFIG_PACKAGE_luci-proto-static=y
CONFIG_PACKAGE_luci-proto-dhcp=y

# Remove extra packages
# Tidak pakai LuCI App tambahan agar kecil
CONFIG_PACKAGE_luci-app-opkg=n
CONFIG_PACKAGE_luci-app-firewall=n
CONFIG_PACKAGE_luci-app-uhttpd=n

# Debug dan dev tools dimatikan
CONFIG_DEVEL=n
CONFIG_CCACHE=n
